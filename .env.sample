# Django Settings
DEBUG=True
SECRET_KEY='your-local-secret-key-that-is-not-used-in-production'
DJANGO_SETTINGS_MODULE=core.settings.development

# Database URL for Django (used by django-environ)
# The host 'db' is the service name from docker-compose.yml
DATABASE_URL=postgres://postgres:password@db:5432/ai_api_db

# PostgreSQL credentials for the 'db' service in docker-compose
POSTGRES_DB=ai_api_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Celery Broker URL (using Redis database 0)
CELERY_BROKER_URL=redis://redis:6379/0

# Redis URL for Django Channels (using Redis database 1)
REDIS_URL=redis://redis:6379/1
